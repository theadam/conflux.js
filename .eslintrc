{
  "parser": "babel-eslint",
  "rules": {
    "quotes": [2, "single"],
    "no-warning-comments": [2, { "terms": ["todo", "fixme", "wtf"], "location": "anywhere" }],
    "strict": 0,
    "curly": [2, "multi-line"],
    "no-underscore-dangle": 0,
    "camelcase": 0,
    "new-cap": 0,
    "no-process-exit": 2,
    "eqeqeq": 2,
    "no-delete-var": 2,
    "max-params": [2, 4],
    "no-plusplus": 2,
    "semi": [2, "always"],
    "no-mixed-requires": 0,
    "valid-jsdoc": 0,
    "no-use-before-define": [2, "nofunc"],

    // Because of a bug in eslint
    "no-unused-vars": 0
  },
  "env": {
    "node": true,
    "browser": true,
    "mocha": true
  }
}
